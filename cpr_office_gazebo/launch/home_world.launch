<launch>
    <!-- Generate World -->
    <param name="office_geom" command="$(find xacro)/xacro '$(find cpr_office_gazebo)/urdf/home_small_geometry.urdf.xacro'" />

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="debug" value="0" />
      <arg name="paused" value="false"/>
      <arg name="gui" value="true" />
      <arg name="use_sim_time" value="true" />
      <arg name="headless" value="false" />
      <!-- <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_world.world"/> -->
      <arg name="world_name" value="$(find cpr_office_gazebo)/worlds/actually_empty_world.world" />
    </include>

    <node name="office_world_spawner" pkg="gazebo_ros" type="spawn_model" args="-urdf -model office_geom -param office_geom -x 0 -y 0 -z 0 -Y 0" />

    <!-- Spawn Turtlebot -->
    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="x_pos" default="-3.0"/>
    <arg name="y_pos" default="0.1"/>
    <arg name="z_pos" default="0.0"/>
    <!-- <arg name="x_pos" default="-2.0"/>
    <arg name="y_pos" default="-0.5"/>
    <arg name="z_pos" default="0.0"/> -->

    <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model turtlebot3 -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />

    <!-- Bring up TurtleBot3 -->
    <include file="$(find turtlebot3_bringup)/launch/turtlebot3_model.launch">
      <arg name="model" value="$(arg model)" />
    </include>
</launch>


